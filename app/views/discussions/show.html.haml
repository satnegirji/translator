.sub-menu
  = link_to "Back", discussions_path, class: "pure-button pure-button-primary"
.main-content
  %table.messages
    %tbody
      = render partial: 'message', object: @discussion, as: :message
      = render partial: "message", collection: @discussion.replies, as: :message
  %table.new-reply
    %tbody
      %tr
        = render 'reply_form'
