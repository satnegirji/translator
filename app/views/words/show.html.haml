.pure-g
  .pure-u-1-3
    %h1.content-subhead
      = t('words.show.word_detail')
    = render 'word_detail'
  .pure-u-2-3
    %h1.content-subhead
      = t('words.show.word_descriptions')
    %table.pure-table.pure-table-bordered
      %thead
        %tr
          %th #
          %th= t('words.show.table.word_descriptions.language')
          %th= t('words.show.table.word_descriptions.description')
          %th= t('words.show.table.word_descriptions.action')
      %tbody
        = render partial: "word_description", collection: @word.descriptions, as: :word_description
    %p
      = link_to t('words.show.table.word_description.create_new'), new_word_word_description_path(@word), class: "pure-button pure-button-primary"
%p
  = link_to t('words.show.back'), words_path, class: "pure-button pure-button-primary"
