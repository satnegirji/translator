%table.pure-table.pure-table-bordered
  %tbody
    %tr
      %td.cell-header #
      %td= @word.id
    %tr
      %td.cell-header= t('words.show.table.body')
      %td= @word.body
    %tr
      %td.cell-header= t('words.show.table.keyword')
      %td= @word.keyword
    %tr
      %td.cell-header= t('words.show.table.language')
      %td= Language.find(@word.language_id)
    %tr
      %td.cell-header= t('words.show.table.word_class')
      %td= Language::WordClass.find(@word.word_class_id)
    %tr
      %td.cell-header= t('words.show.table.created_at')
      %td= @word.created_at.to_s(:short)
    %tr
      %td.cell-header= t('words.show.table.updated_at')
      %td= @word.updated_at.to_s(:short)
    %tr
      %td.cell-header= t('words.show.table.created_by')
      %td= @word.creator.email