<div class="devise-modal">
  <h2><%= t('devise.sessions.new.log_in') %></h2>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "pure-form  pure-form-stacked"}) do |f| %>
    <div class="pure-control-group">
      <%= f.label :email, t('devise.sessions.new.email') %>
      <%= f.email_field :email, autofocus: true, placeholder: "#{t('devise.sessions.new.email')}" %>
    </div>

    <div class="pure-control-group">
      <%= f.label :password, t('devise.sessions.new.password') %>
      <%= f.password_field :password, autocomplete: "off", placeholder: "#{t('devise.sessions.new.password')}" %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="pure-control-group">
      <%= f.label :remember_me do %>
        <%= f.check_box :remember_me %>
        <%= t('devise.sessions.new.remember_me') %>
      <% end %>
      </div>
    <% end -%>

    <div class="pure-controls">
      <%= f.submit t('devise.sessions.new.submit'), class: "pure-button pure-button-primary" %>
    </div>
    <div class="pure-controls">
      <%= render "devise/shared/links" %>
    </div>
  <% end %>
</div>
