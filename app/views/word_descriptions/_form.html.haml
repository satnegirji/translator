= form_for([@word, @word_description], html: { class: "pure-form pure-form-aligned" }) do |f|
  - if @word_description.errors.any?
    .alert.alert-alert
      %ul.minimal
        - @word_description.errors.messages.each do |k,v|
          %li= v.first
  .pure-control-group
    = f.label :language_id, t('words.word_description.form.language_id')
    = f.select :language_id, options_for_select(languages_for_select)
  .pure-control-group
    = f.label :body, t('words.word_description.form.body')
    = f.text_area :body, class: "pure-input-1-2"
  .pure-controls
    = f.submit value: t('words.word_description.form.submit'), class: "pure-button pure-button-primary"
    or
    = link_to  t('words.word_description.form.cancel'), @word